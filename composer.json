{
    "name": "thecreditpros/ai-sdlc-framework",
    "description": "AI-Powered SDLC Framework for Credit Repair Applications",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Damon DeCrescenzo",
            "email": "damon@thecreditpros.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^10.0",
        "laravel/sanctum": "^3.3",
        "laravel/tinker": "^2.8"
    },
    "require-dev": {
        "fakerphp/faker": "^1.21",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^7.10",
        "pestphp/pest": "^2.28",
        "pestphp/pest-plugin-laravel": "^2.2",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^0.18",
        "spatie/laravel-ignition": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "test": [
            "@php vendor/bin/pest"
        ],
        "test-coverage": [
            "@php vendor/bin/pest --coverage --min=80"
        ],
        "analyse": [
            "@php vendor/bin/phpstan analyse"
        ],
        "format": [
            "@php vendor/bin/pint"
        ],
        "format-test": [
            "@php vendor/bin/pint --test"
        ],
        "refactor": [
            "@php vendor/bin/rector process"
        ],
        "refactor-dry": [
            "@php vendor/bin/rector process --dry-run"
        ],
        "quality": [
            "@format-test",
            "@analyse",
            "@test-coverage"
        ],
        "fcra-compliance": [
            "@php artisan fcra:validate"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

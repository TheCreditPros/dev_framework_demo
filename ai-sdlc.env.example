# AI-SDLC Framework Environment Configuration
# Copy this file to .env and customize as needed

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Project Configuration
PROJECT_NAME=portal2-admin-refactor
PROJECT_DOMAIN=general
COMPLIANCE_REQUIREMENTS=basic
TEAM_NAME=development

# AI Model Configuration
AI_PRIMARY_MODEL=gpt-4o-mini
AI_COMPLEX_MODEL=claude-3-5-sonnet
AI_PLANNING_MODEL=deepseek-r1
AI_COST_OPTIMIZATION=true
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.3

# Quality Gates Configuration
ESLINT_ENABLED=true
ESLINT_CONFIG=./eslint.config.mjs
ESLINT_AUTO_FIX=true
PRETTIER_ENABLED=true
PRETTIER_CONFIG=./prettier.config.mjs
PRETTIER_AUTO_FORMAT=true
TYPESCRIPT_ENABLED=true
TYPESCRIPT_STRICT=true
TYPESCRIPT_NO_EMIT=true

# Testing Configuration
VITEST_ENABLED=true
VITEST_COVERAGE_THRESHOLD=80
VITEST_CONFIG=./vitest.config.ts
PLAYWRIGHT_ENABLED=true
PLAYWRIGHT_CONFIG=./e2e/playwright.config.js
PLAYWRIGHT_AUTO_HEALING=true

# Pre-commit Hooks Configuration
PRE_COMMIT_HOOKS=lint:fix,typecheck,format:fix,quality-gate-check
COMMIT_MSG_HOOKS=conventional-commit-validation
POST_COMMIT_HOOKS=ai-quality-analysis,multi-stack-detection,ai-test-improvement

# Stack Detection Configuration
DETECT_NEXTJS=true
DETECT_REACT=true
DETECT_TYPESCRIPT=true
DETECT_MATERIAL_UI=true
DETECT_TESTING=true
DETECT_E2E=true
CUSTOM_STACK_DETECTION=

# Auto-Healing Configuration
PLAYWRIGHT_AUTO_HEALING=true
SELECTOR_STRATEGY=data-testid
TIMEOUT_EXTENSION=true
BROKEN_SELECTOR_DETECTION=true
AUTO_TEST_GENERATION=true
AUTO_TEST_IMPROVEMENT=true
AUTO_COVERAGE_IMPROVEMENT=true

# Cost Optimization
AI_MODEL_ROUTING=true
AI_TOKEN_OPTIMIZATION=true
AI_BATCH_PROCESSING=true
AI_CACHE_ENABLED=true

# Notification Configuration
NOTIFICATIONS_ENABLED=true
NOTIFICATION_PROVIDERS=console,teams
TEAMS_NOTIFICATIONS=true
MS_TEAMS_WEBHOOK_URI=your_teams_webhook_here
MS_TEAMS_DEV_WEBHOOK=your_dev_webhook_here
MS_TEAMS_SECURITY_WEBHOOK=your_security_webhook_here
SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URI=your_slack_webhook_here
EMAIL_NOTIFICATIONS=false
SMTP_CONFIG=your_smtp_config_here

# File Path Configuration
SOURCE_PATH=src
TESTS_PATH=tests
INTEGRATION_TESTS_PATH=tests/integration
E2E_TESTS_PATH=tests/e2e
COVERAGE_PATH=coverage
REPORTS_PATH=reports

# Compliance Configuration
COMPLIANCE_ENABLED=false
COMPLIANCE_FRAMEWORK=basic
COMPLIANCE_RULES=
COMPLIANCE_VALIDATION=false
COMPLIANCE_STRICT=false

# Performance Configuration
PERFORMANCE_ENABLED=true
PERF_FCP_THRESHOLD=2.5s
PERF_LCP_THRESHOLD=4.0s
PERF_CLS_THRESHOLD=0.1
LIGHTHOUSE_ENABLED=true
LIGHTHOUSE_CONFIG=./lighthouse.config.js

# Security Configuration
SECURITY_ENABLED=false
SECURITY_SCANNING=false
SECURITY_SCAN_LEVEL=medium
SECURITY_COMPLIANCE=false
SECURITY_FRAMEWORKS=

# Rollback Configuration
ROLLBACK_ENABLED=true
ROLLBACK_CHECKPOINTS=dependencies,configs,scripts,hooks
ROLLBACK_BACKUP_FILES=.eslintrc.js,.prettierrc,package.json

# Debug Configuration
DEBUG_ENABLED=false
VERBOSE_LOGGING=false
LOG_LEVEL=info



# Environment-specific overrides
NODE_ENV=development
